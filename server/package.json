{
    "name": "incrementum-sync-server",
    "version": "1.0.0",
    "description": "Sync server for Incrementum PWA and desktop app",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "db:migrate": "tsx src/db/migrate.ts",
        "db:seed": "tsx src/db/seed.ts"
    },
    "dependencies": {
        "express": "^4.21.0",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "compression": "^1.7.4",
        "pg": "^8.12.0",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "uuid": "^10.0.0",
        "zod": "^3.23.8",
        "multer": "^1.4.5-lts.1",
        "dotenv": "^16.4.5"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/cors": "^2.8.17",
        "@types/compression": "^1.7.5",
        "@types/pg": "^8.11.6",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/uuid": "^10.0.0",
        "@types/multer": "^1.4.11",
        "@types/node": "^22.0.0",
        "tsx": "^4.16.0",
        "typescript": "^5.5.0",
        "vitest": "^2.0.0"
    }
}